<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckOutActivity"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10pxh">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:layout_marginTop="1sp"
            android:layout_marginStart="@dimen/_15pxh"
            android:contentDescription="@string/todo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Your_cart"
            android:layout_marginStart="@dimen/_30pxh"
            android:textSize="@dimen/_15sp"
            android:fontFamily="@font/overpass"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearRow2itemsinyour"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_24pxh"
        android:layout_marginStart="@dimen/_24pxh"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:ellipsize="end"
            android:id="@+id/txt2Itemsinyour"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3pxv"
            android:layout_weight="0.59"
            android:layout_width="0dp"
            android:singleLine="true"
            android:text="@string/msg_2_items_in_your"
            style="@style/txtSofiaProregular14"/>

        <LinearLayout
            android:id="@+id/linearRowgroup3639"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3pxv"
            android:layout_marginStart="@dimen/_116pxh"
            android:layout_weight="0.41"
            android:layout_width="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageGroup3639"
                android:layout_height="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_width="@dimen/_12pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_plus"
                tools:ignore="ContentDescription"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtAddmore"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_weight="0.84"
                android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                android:text="@string/lbl_add_more"
                style="@style/txtSofiaProregular14_1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:ellipsize="end"
        android:id="@+id/txtPaymentSummary"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_24pxh"
        android:layout_marginStart="@dimen/_24pxh"
        android:layout_marginTop="@dimen/_29pxv"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:text="payment summary"
        style="@style/txtOverpasssemibold16"/>
    <LinearLayout
        android:id="@+id/linearRowa"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_44pxv"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearRowgroupitem"
            android:layout_height="wrap_content"
            android:layout_weight="0.97"
            android:layout_width="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOrdertotal"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.84"
                android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                style="@style/txtHKGroteskmedium15"
                android:text="Order Total" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.228.80"
            style="@style/txtHKGroteskmedium15"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_10pxv"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearRowItemsDiscount"
            android:layout_height="wrap_content"
            android:layout_weight="0.97"
            android:layout_width="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtItems_Discount"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.84"
                android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                style="@style/txtHKGroteskmedium15"
                android:text="Items Discount" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtitemsdiscountprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.15.80"
            style="@style/txtHKGroteskmedium15"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_10pxv"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearRowcoupondiscount"
            android:layout_height="wrap_content"
            android:layout_weight="0.97"
            android:layout_width="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCouponDiscount"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.84"
                android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                style="@style/txtHKGroteskmedium15"
                android:text="Coupon Discount" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCouponDiscountprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.15.80"
            style="@style/txtHKGroteskmedium15"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_10pxv"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearRowshipping"
            android:layout_height="wrap_content"
            android:layout_weight="0.97"
            android:layout_width="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtShipping"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.84"
                android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                style="@style/txtHKGroteskmedium15"
                android:text="shipping" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtShippingprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="free"
            style="@style/txtHKGroteskmedium15"/>
    </LinearLayout>
    
    <View
        android:background="@color/black_900_0c"
        android:id="@+id/lineLineFive"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/_1pxv"
        android:layout_marginEnd="@dimen/_24pxh"
        android:layout_marginStart="@dimen/_24pxh"
        android:layout_marginTop="@dimen/_16pxv"
        android:layout_width="@dimen/_322pxh"/>

    <LinearLayout
        android:id="@+id/linearRowtotal"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_24pxh"
        android:layout_marginStart="@dimen/_24pxh"
        android:layout_marginTop="@dimen/_15pxv"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView android:ellipsize="end"
            android:id="@+id/txtTotal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2pxv"
            android:layout_weight="0.37"
            android:layout_width="0dp"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:singleLine="true"
            android:text="total"
            style="@style/txtOverpassregular16"/>

        <TextView
            android:id="@+id/txttotalPrice"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/_1pxv"
            android:layout_marginStart="@dimen/_225pxh"
            android:layout_weight="0.63"
            android:layout_width="0dp"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:singleLine="true"
            android:text="@string/lbl_185_00"
            style="@style/txtOverpassbold16_1"
            tools:text="@string/lbl_185_00"/>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/btnPlaceOrder185Zero"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20pxv"
        android:layout_marginEnd="@dimen/_24pxh"
        android:layout_marginStart="@dimen/_24pxh"
        android:layout_marginTop="@dimen/_75pxv"
        android:layout_width="match_parent"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:singleLine="true"
        android:text="place order"
        android:textAllCaps="false"
        style="@style/btnSolidRounded"/>


</LinearLayout>